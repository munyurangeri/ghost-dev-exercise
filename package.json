{
  "name": "development-exercise",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "server:start": "json-server db.json --static ./data",
    "dev": "concurrently \"json-server db.json --static ./data\" \"vite\"",
    "build": "vite build",
    "preview": "concurrently \"json-server db.json --static ./data\" \"vite build\" \"vite preview\"",
    "start": "concurrently \"json-server db.json --static ./data\" \"vite build\" \"npm install \" \"npm install -g serve \" \"serve -s dist -l 5000\""
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "vite": "^5.4.9"
  },
  "dependencies": {
    "concurrently": "^9.0.1",
    "json-server": "^1.0.0-beta.3"
  }
}
